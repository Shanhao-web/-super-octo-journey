<div class="jumbotron">
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.description %></td>
        <td><%= link_to 'Show', faculty %></td>
        <td><% if faculty.user == current_user %>
        <%= link_to 'Edit', edit_faculty_path(faculty) %>
        <% end %>
        </td>
        <td><% if faculty.user == current_user %>
        <td><%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in?%>
<%= link_to 'New Faculty', new_faculty_path,class:"btn btn-primary" %>
<% end %>
</div>
